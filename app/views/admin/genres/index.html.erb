<div class="container">
    <div class="row">
        <div class="col-12">
            <h4>ジャンル一覧・追加</h4>
        </div>
        <div>
         <%= form_with model: @genre, url: admin_genre_path, do |f| %>
          <div><%= f.label :name, "ジャンル名" %></div>
          <div><%= f.text_field :name, placeholder: "ジャンル" %></div>
          <div><%= f.submit "新規登録" %></div>
         <% end %>
        </div>
        <div> 
         <table>
             <thead>
                 <tr>
                     <th>ジャンル</th>
                     <th></th>
                 </tr>
             </thead>
             <tbody>
                 <% @genres.each do |genre| %>
                 <tr>
                     <td><%= genre.name %></td>
                     <td><%= link_to "編集する", edit_admin_gemre_path(genre.id) %></td>
                 </tr>
                 <% end %>
             </tbody>
            
         </table>
        </div>
    </div>
</div>