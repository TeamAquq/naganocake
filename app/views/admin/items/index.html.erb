<div class="container pt-5">
  <div class="row">
    <div class="col-12 mx-auto">
      <h2>商品一覧</h2>
      <div class="text-right">
      <%= link_to new_admin_item_path do %>
      <i class="fas fa-plus"></i>
      <% end %>

      </div>
      <% unless @items.blank? %>
       <table class='table mt-3'>
         <thead>
           <th>商品ID</th>
           <th>商品名</th>
           <th>税抜価格</th>
           <th>ジャンル</th>
           <th>ステータス</th>
         </thead>
         <tbody>
           <% @items.each do |item| %>
           <tr>
             <td><%= item.id %></td>
             <td><%= link_to item.name, admin_item_path(item) %></td>
             <td><%= item.price.to_s(:delimited) %></td>
             <td><%= item.genre.name %></td>
             <td>
               <% if item.sale_status == true %>
                <p class="text-success">販売中</p>
               <% elsif item.sale_status == false %>
                <p class="text-muted">販売停止中</p>
               <% end %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
       <% else %>
        <p>商品はありません</p>
       <% end %>

      <div class= "d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>