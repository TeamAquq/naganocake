<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h2>商品一覧</h2>
      <%= link_to "新商品", new_admin_item_path %>
      
      
       <table class='table'>
         <thead>
           <th>商品ID</th>
           <th>商品名</th>
           <th>ジャンル</th>
           <th>ステータス</th>
         </thead>
         <tbody>
           <% @items.each do |item| %>
           <tr>
             <td><%= item.id %></td>
             <td><%= link_to item.name, admin_item_path(item) %></td>
             <td><%= item.price %></td>
             <td>
               <% if item.sale_status == true %>
                <p class="text-success">販売中</p>
               <% elsif item.sale_status == false %>
                <p class="text-muted">販売停止中</p>
               <% end %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
      
      
    </div>
  </div>
</div>