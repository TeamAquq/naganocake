<div class="container">
  <div class="row">
    <div>
      <%= form_with model: @item, method: :post, local:true do |f| %>
       <div>
         <%= f.label "商品画像" %>
         <%= f.file_field :image, accept: "image/*" %>
       </div>
       <div>
         <%= f.label "商品名" %>
         <%= f.text_field :name %>
       </div>
       <div>
         <%= f.label "商品説明" %>
         <%= f.text_area :body %>
       </div>
       <div>
         <%= f.label "ジャンル" %>
         <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %>
       </div>
       <div>
         <%= f.label "税抜き価格" %>
         <%= f.text_field :price, :placeholder => "1000" %>円
       </div>
       <div>
         <%= f.label "販売ステータス" %>
         <%= f.radio_button :sale_status, "true", checked: true %>販売中
         <%= f.radio_button :sale_status, "false", checked: false %>販売停止中
       </div>
       <div>
         <%= f.label "商品説明" %>
         <%= f.text_field :name %>
       </div>
       <div>
         <%= f.submit :新規登録 %>
       </div>
      <% end %>
    </div>
  </div>
</div>