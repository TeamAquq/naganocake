        <% else %>
         <%= link_to root_path do %><i class="fas fa-home"></i><% end %>
        <% end %>
       </div>

       <div class="col-3">
        <% if customer_signed_in? %>
       <div>ようこそ、<%= current_customer.last_name %>さん！</div>
        <% end %>
       </div>


       <div class="col-6">
        <% if customer_signed_in? %>
         <%= link_to "マイページ", customers_path, class: "btn btn-sm btn-outline-dark" %>
