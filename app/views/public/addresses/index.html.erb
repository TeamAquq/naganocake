 <h4>配送先登録/一覧</h4>

  <%= form_with model: @address, local:true do |f| %>

    <div>
      <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
      <div>
        <%= f.text_field :postcode, placeholder: "00000000" %>
      </div>
    </div>

    <div>
      <%= f.label :address, "住所" %>
      <div>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>

    <div>
      <%= f.label :name, "宛名" %>
      <div>
        <%= f.text_field :name, placeholder: "令和道子" %>
      </div>
      <div>
        <%= f.submit "新規登録" %>
      </div>
    </div>

  <% end %>

  <thead>
    <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    </tr>
  </thead>


          <% @addresses.each do |address| %>
            <tr class="text">
              <td><%= address.postcode %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "Edit", edit_address_path(address.id) %>
                <%= link_to "Delete", address_path(address.id), method: :delete %>
              </td>
            </tr>
          <% end %>    