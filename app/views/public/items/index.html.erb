<div class="container">
    <div class="row">

          <div class="col-md-3">
            <table class="table"><thead>ジャンル検索</thead>
              <% @genres.each do |genre| %>
              <tbody>
            <li><%= genre.name %></li>
             <% end %></tbody>
             </table></div>

         <div class="col-md-8 offset-md-1">
        <div>商品一覧<span>（全<%= @items.count %>件）</span>
        </div>
              <div class= "d-flex flex-wrap justify-content-around mb-5 genre-box">
 <% @items.each do |item| %>
    <div class= "product-box">
      <% if item.sale_status == true %>
        <%= link_to item_path(item) do %>
        <%= image_tag item.image, size: "400x300" %>  </br>
        <% end %>
      <% else %>
        <div class="sold-out">
          <%= link_to item_path(item) do %>
                <%= image_tag item.image, size: "400x300" %></br>
          <% end %>
          <h3>Sold out</h3>
        </div>
      <% end %>

      <p class="text-center item-name-p"><%= link_to item.name, item_path(item), class: "item-name" %></p>
      <p class="text-right item-price-p">¥ <%= item.price.to_s(:delimited) %></p>
    </div>
  <% end %>
</div>  <div id="page_top"><a href="#"></a></div>
        </div>
    </div>
</div>